    public String get_id() {
        return _id.toHexString();
    }

    public Jogadores set_id(ObjectId _id) {
        this._id = _id;
        return this;
    }

    public String getNome() {
        return nick;
    }

    public Jogadores setNome(String nome) {
        this.nick = nome;
        return this;
    }

    public String getEspecie() {
        return senha;
    }

    public Jogadores setEspecie(String especie) {
        this.senha = especie;
        return this;
    }

    public String getRaca() {
        return dataHoraCriacaoConta;
    }

    public Jogadores setRaca(String raca) {
        this.dataHoraCriacaoConta = raca;
        return this;
    }    
