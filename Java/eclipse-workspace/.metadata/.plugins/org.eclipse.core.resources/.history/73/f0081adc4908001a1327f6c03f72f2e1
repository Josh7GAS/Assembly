    //@Indexed(name = "EMAIL", length = VARCHAR_LENGTH_EMAIL, unique = true)
    private String
    
    public Jogadores() {}
    
    public Jogadores(Long _id, String nick, LocalDateTime dataDateTime, String raca) {
        this._id = _id;
        this.nick = nick;
        this.senha = senha;
        this.dataHoraCriacaoConta = raca;
    }

    //</editor-fold>
    
    //<editor-fold defaultstate="collapsed" desc="methods...">
